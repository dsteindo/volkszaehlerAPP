<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:key="server_name"
        android:summary="Define the Server you want to use"
        android:title="Server Name" 
        android:defaultValue="demo.volkszaehler.org" />
	<EditTextPreference
	    android:key="timeout"
	    android:summary="Define the Timeout in Seconds"
	    android:title="Timeout"
	    android:defaultValue="15" />
    <EditTextPreference 
        android:key="max_tuples"
        android:summary="Define how many Values should be shown"
        android:title="Tuples"
        android:defaultValue="1000" />
	
</PreferenceScreen>